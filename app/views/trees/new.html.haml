= render 'events/background'
#container.grey
	%h1.green It's a Treevolution, help us plant!
	
	= form_for @tree, url: event_trees_path(@event) do |f|
		%p.white.donate 
			I'll donate R
			= f.number_field :rand_given, id: "ZAR", class: "donate_money inline", value: @rand_amount, step: 0.5
			or USD $
			= f.number_field :dollar_amount, id: "USD", class: "donate_money inline", value: @dollar_amount, step: 0.5
			towards tree planting in southern Africa
		%span.white.donate
			= f.submit("I have paid through Snapscan", class: "button snapscan", id: "submit")
		%span.white.donate
			= f.submit("Donate through Paypal", class: "button paypal")
		
		%span.white.donate
			.button.snapscan#snap
				Donate through Snapscan	
			.box
				= image_tag "snapscanQR.png", class: "snapimg", align: "center"
				= image_tag "close.png", class: "close"

	%br
	%p
		= link_to("Create a Personal Green Pledge Instead", new_event_pledge_path(@event), class: "small-txt")

:javascript
	var conversion = "#{@conversion}";
	var paypal_url = "#{@paypal_url}";

	$(document).ready(function(){
		$("#USD").change(function(){
			var rand = $(this).val()*conversion
			$("#ZAR").val(rand.toFixed(2));
		});
		$("#ZAR").change(function(){
			var usd = $(this).val()/conversion
			$("#USD").val(usd.toFixed(2));
		});
		$('.paypal').click(function(e) {
			e.preventDefault();
			amount = $("#USD").val();
			window.location = 'https://www.paypal.com/za/cgi-bin/webscr?amount=' + amount + '&' + paypal_url;
		});
	});
